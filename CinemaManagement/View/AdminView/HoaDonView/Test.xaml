<Window x:Class="CinemaManagement.View.Test"      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
       xmlns:local="clr-namespace:CinemaManagement.View"
      mc:Ignorable="d"
      xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
      xmlns:ei="http://schemas.microsoft.com/xaml/behaviors"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" xmlns:adminvm="clr-namespace:CinemaManagement.ViewModel.AdminVM" d:DataContext="{d:DesignInstance Type=adminvm:HoaDonVM}"
      TextElement.Foreground="{DynamicResource MaterialDesignBody}"
      TextElement.FontWeight="Regular"
      TextElement.FontSize="13"
      TextOptions.TextFormattingMode="Ideal"
      TextOptions.TextRenderingMode="Auto"
      Background="#f3f5f7"
      FontFamily="{DynamicResource MaterialDesignFont}"
      d:DesignHeight="720"
      d:DesignWidth="1300"
      Title="TicketBillPage"
      x:Name="BillPage"
      DataContext="{StaticResource BillVM}">

    <ei:Interaction.Triggers>
        <ei:EventTrigger EventName="Loaded">
            <ei:InvokeCommandAction Command="{Binding GetCurrentWindowCM}"
                                   CommandParameter="{Binding ElementName=thanhtoanWindow}"/>
        </ei:EventTrigger>
    </ei:Interaction.Triggers>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="231*" />
            <ColumnDefinition Width="419*" />
        </Grid.ColumnDefinitions>

        <Border CornerRadius="90"
                Height="55"
                Width="55"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="15 15 0 0"
                Cursor="Hand">
            <Border.Style>
                <Style TargetType="Border">
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Setter Property="Background"
                                    Value="#e0e0e0" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>
            <materialDesign:PackIcon Kind="ArrowLeft"
                                     Height="45"
                                     Width="45"
                                     VerticalAlignment="Center"
                                     HorizontalAlignment="Center" />
            
        </Border>

        <materialDesign:Card HorizontalAlignment="Left"
                             Width="360"
                             Height="70"
                             VerticalAlignment="Top"
                             Margin="70 60 0 0"
                             UniformCornerRadius="6">
            <Label Content="THANH TOÁN HÓA ĐƠN"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   FontSize="28"
                   FontWeight="ExtraBold"
                   FontFamily="Ubuntu" />
        </materialDesign:Card>

        <materialDesign:Card VerticalAlignment="Stretch"
                             HorizontalAlignment="Left"
                             Width="360"
                             Margin="70 170 0 20"
                             UniformCornerRadius="6">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="61" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <!---HEADER-->
                <Grid Grid.Row="0">
                    <Label Content="  Thông tin khách hàng"
                           FontSize="25"
                           FontWeight="Bold"
                           BorderThickness="0,0,0,0.5"
                           BorderBrush="Black"
                           Padding="10,10,0,0"
                           Margin="10 8 10 0" />
                </Grid>
                <!--#endregion-->

                <Grid Grid.Row="1">

                    <Grid.Resources>
                        <Style TargetType="TextBlock">
                            <Setter Property="VerticalAlignment"
                                    Value="Center" />
                            <Setter Property="FontSize"
                                    Value="18" />
                            <Setter Property="Margin"
                                    Value="10 15 15 0" />
                            <Setter Property="HorizontalAlignment"
                                    Value="Right" />

                        </Style>

                        <Style TargetType="TextBox"
                               BasedOn="{StaticResource MaterialDesignFloatingHintTextBox}">
                            <Setter Property="VerticalAlignment"
                                    Value="Stretch" />
                            <Setter Property="HorizontalAlignment"
                                    Value="Stretch" />
                            <Setter Property="FontSize"
                                    Value="18" />
                            <Setter Property="TextAlignment"
                                    Value="Left" />

                            <Setter Property="Margin"
                                    Value="0 0 10 4" />
                            <Setter Property="Padding"
                                    Value="0 0 0 0" />
                        </Style>
                    </Grid.Resources>

                    <Grid Height="40"
                          VerticalAlignment="Top">
                        <CheckBox IsThreeState="False"
                                  IsChecked="{Binding IsWalkinGuest}"
                                  Content="Khách vãng lai"
                                  Margin="10 0 0 0"
                                  FontSize="18"
                                  VerticalAlignment="Bottom"
                                  x:Name="checkBox"
                                  Command="{Binding CboxWalkinGuestCM}"
                                  CommandParameter="{Binding IsChecked, RelativeSource={RelativeSource Self}}" />
                    </Grid>

                    <Grid Height="45"
                          Margin="0 40 0 0"
                          VerticalAlignment="Top">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="115" />
                            <ColumnDefinition />
                            <ColumnDefinition Width="70" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Điện thoại:"
                                   Margin="10 15 15 0" />
                        <TextBox Grid.Column="1"
                                 x:Name="TboxPhoneNumber"
                                 Text="{Binding PhoneNumber, Mode=TwoWay}" />
                        <Button Grid.Column="2"
                                Content="{materialDesign:PackIcon PhoneCheckOutline}"
                                VerticalAlignment="Bottom"
                                Margin="15 0 10 0"
                                Command="{Binding CheckPhoneNumberCM}" />

                        <Grid.Style>
                            <Style>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ShowPhone}"
                                                 Value="False">
                                        <Setter Property="Grid.Visibility"
                                                Value="Hidden" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>
                    </Grid>

                    <!--#region Không hợp lệ-->
                    <Grid Height="45"
                          VerticalAlignment="Top"
                          Margin="0 85 0 0">
                        <Label Content="Số điện thoại chưa đăng ký!"
                               FontSize="18"
                               VerticalAlignment="Bottom"
                               HorizontalAlignment="Center"
                               Foreground="Red"
                               FontWeight="DemiBold" />
                        <Grid.Style>
                            <Style>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ShowPhoneError}"
                                                 Value="false">
                                        <Setter Property="Grid.Visibility"
                                                Value="Hidden" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>

                    </Grid>


                    <Grid Height="43"
                          VerticalAlignment="Top"
                          Margin="0 130 0 0">
                        <Label FontSize="18"
                               VerticalAlignment="Top"
                               HorizontalAlignment="Center">
                            <Hyperlink Command="{Binding OpenSignUpCM}">Đăng ký tài khoản mới</Hyperlink>

                        </Label>
                        <Grid.Style>
                            <Style>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ShowPhoneError}"
                                                 Value="false">
                                        <Setter Property="Grid.Visibility"
                                                Value="Hidden" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>
                    </Grid>

                    <Grid Height="45"
                          VerticalAlignment="Top"
                          Margin="0 173 0 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="115" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Họ và tên:" />
                        <TextBox Grid.Column="1"
                                 Margin="0 0 30 0"
                                 Text="{Binding NameSignUp, Mode=TwoWay}" />
                        <Grid.Style>
                            <Style>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ShowSignUp}"
                                                 Value="False">
                                        <Setter Property="Grid.Visibility"
                                                Value="Hidden" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>
                    </Grid>

                    <Grid Height="45"
                          VerticalAlignment="Top"
                          Margin="0 218 0 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="115" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Email:" />
                        <TextBox Grid.Column="1"
                                 Margin="0 0 30 0"
                                 Text="{Binding EmailSignUp, Mode=TwoWay}" />
                        <Grid.Style>
                            <Style>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ShowSignUp}"
                                                 Value="False">
                                        <Setter Property="Grid.Visibility"
                                                Value="Hidden" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>
                    </Grid>

                    <Grid Height="60"
                          VerticalAlignment="Top"
                          Margin="0 263 0 0">
                        <Button Content="Đăng ký"
                                Width="110"
                                VerticalAlignment="Bottom"
                                HorizontalAlignment="Right"
                                Margin="0 0 10 10"
                                Command="{Binding SignUpCM}" />
                        <Grid.Style>
                            <Style>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ShowSignUp}"
                                                 Value="False">
                                        <Setter Property="Grid.Visibility"
                                                Value="Hidden" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>
                    </Grid>

                    <!--#endregion-->

                    <!--#region Hợp lệ-->

                    <Grid Height="45"
                          VerticalAlignment="Top"
                          Margin="0 85 0 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="115" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Họ và tên:" />
                        <TextBox Grid.Column="1"
                                 IsEnabled="False"
                                 Margin="0 0 30 0"
                                 VerticalContentAlignment="Bottom"
                                 VerticalAlignment="Center"
                                 Text="{Binding Name}"
                                 TextAlignment="Center" />
                        <Grid.Style>
                            <Style>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ShowInfoCustomer}"
                                                 Value="False">
                                        <Setter Property="Grid.Visibility"
                                                Value="Hidden" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>
                    </Grid>

                    <Grid Height="45"
                          VerticalAlignment="Top"
                          Margin="0 130 0 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="115" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Email:" />
                        <TextBox Grid.Column="1"
                                 IsEnabled="False"
                                 Margin="0 0 30 0"
                                 VerticalContentAlignment="Bottom"
                                 VerticalAlignment="Center"
                                 Text="{Binding Email}"
                                 TextAlignment="Center" />
                        <Grid.Style>
                            <Style>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ShowInfoCustomer}"
                                                 Value="False">
                                        <Setter Property="Grid.Visibility"
                                                Value="Hidden" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>
                    </Grid>

                    <Grid VerticalAlignment="Top"
                          Margin="10 175 0 10"
                          Height="45">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="95" />
                            <ColumnDefinition />
                            <ColumnDefinition Width="65" />
                        </Grid.ColumnDefinitions>
                        
                        <TextBox Grid.Column="1"
                                 Margin="10 0 15 4"
                                 Text="{Binding VoucherID, Mode=TwoWay}" />
                        <Button Grid.Column="2"
                                VerticalAlignment="Bottom"
                                Margin="10 0 10 0"
                                Command="{Binding AddVoucherCM}">
                            <Button.ContentTemplate>
                                <DataTemplate>
                                    <materialDesign:PackIcon Kind="Plus"
                                                             VerticalAlignment="Stretch"
                                                             HorizontalAlignment="Stretch" />
                                </DataTemplate>
                            </Button.ContentTemplate>
                        </Button>

                        <Grid.Style>
                            <Style>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ShowInfoCustomer}"
                                                 Value="False">
                                        <Setter Property="Grid.Visibility"
                                                Value="Hidden" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>
                    </Grid>

                    <Grid VerticalAlignment="Stretch"
                          Margin="10 240 10 60">
                        <ScrollViewer VerticalScrollBarVisibility="Auto"
                                      >
                            <ListBox ItemsSource="{Binding ListVoucher}"
                                     x:Name="listBox"
                                     SelectedItem="{Binding SelectedItem}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Width="330">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="250" />
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>

                                            <Grid Grid.Column="0">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition />
                                                    <RowDefinition />
                                                </Grid.RowDefinitions>

                                                <TextBlock Grid.Row="0"
                                                           Text="{Binding Code}"
                                                           FontSize="18"
                                                           FontWeight="DemiBold" />
                                                <TextBlock Grid.Row="1"
                                                           Text="{Binding VoucherInfoStr}"
                                                           FontSize="16"
                                                           FontWeight="Light"
                                                           HorizontalAlignment="Right" />
                                            </Grid>

                                            <Grid Grid.Column="1">
                                                <Border VerticalAlignment="Center"
                                                        HorizontalAlignment="Right"
                                                        Height="25"
                                                        Width="25"
                                                        Margin="0 0 25 0"
                                                        Cursor="Hand"
                                                        CornerRadius="8">
                                                    <Label VerticalAlignment="Center"
                                                           HorizontalAlignment="Center"
                                                           Height="25"
                                                           Width="25"
                                                           Content="X"
                                                           VerticalContentAlignment="Center"
                                                           HorizontalContentAlignment="Center">
                                                    </Label>
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver"
                                                                         Value="True">
                                                                    <Setter Property="Background"
                                                                            Value="#ff6255" />
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                 
                                                </Border>

                                            </Grid>

                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </ScrollViewer>
                        <Grid.Style>
                            <Style>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ShowInfoCustomer}"
                                                 Value="False">
                                        <Setter Property="Grid.Visibility"
                                                Value="Hidden" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>
                    </Grid>

                    <Button Width="110"
                            Height="32"
                            VerticalAlignment="Bottom"
                            HorizontalAlignment="Right"
                            Margin="0 0 10 10"
                            Content="Thanh toán"
                            Command="{Binding PayFullCM}">
                        <Button.Style>
                            <Style TargetType="Button"
                                   BasedOn="{StaticResource MaterialDesignRaisedButton}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ShowDoneButton}"
                                                 Value="False">
                                        <Setter Property="Button.Visibility"
                                                Value="Hidden" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <!--#endregion-->

                </Grid>



            </Grid>
        </materialDesign:Card>

        <materialDesign:Card VerticalAlignment="Top"
                             HorizontalAlignment="Right"
                             Height="640"
                             Width="804"
                             Margin="0 60 40 0"
                             UniformCornerRadius="6"
                             Grid.ColumnSpan="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>

                <!--#region Phim-->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="61" />
                        <RowDefinition Height="447" />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <!---HEADER-->
                    <Grid Grid.Row="0">
                        <Label Content="  Phim"
                               FontSize="25"
                               FontWeight="Bold"
                               BorderThickness="0,0,0,0.5"
                               BorderBrush="Black"
                               Padding="10,10,0,0"
                               Margin="10 8 10 0" />
                    </Grid>
                    <!--#endregion-->

                    <!---BILL DETAIL-->
                    <Grid Grid.Row="1"
                          Height="490"
                          VerticalAlignment="Top">
                        <Border BorderBrush="Gray"
                                BorderThickness="0,0,0,0"
                                Height="432"
                                VerticalAlignment="Top">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition />
                                    <RowDefinition Height="39" />
                                </Grid.RowDefinitions>


                                <Border Grid.Row="0"
                                        BorderThickness="0,0,0,1"
                                        BorderBrush="Black"
                                        Margin="10,0,10,0">
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <Grid Width="380"
                                                  Margin="0,15,0,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="15*" />
                                                    <ColumnDefinition Width="85*" />
                                                </Grid.ColumnDefinitions>

                                                <Label Content="Phim"
                                                       Grid.Column="0"
                                                       FontSize="20" />
                                                <Label Grid.Column="1"
                                                       HorizontalAlignment="Right"
                                                       FontSize="20"
                                                       x:Name="_moviename"
                                                       Content="{Binding MovieName}"
                                                       FontWeight="Bold" />
                                            </Grid>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <Grid Width="380"
                                                  Margin="0,15,0,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition />
                                                    <ColumnDefinition />
                                                </Grid.ColumnDefinitions>

                                                <Label Content="Ngày chiếu"
                                                       Grid.Column="0"
                                                       FontSize="20" />
                                                <Label Content="{Binding Date}"
                                                       Grid.Column="1"
                                                       HorizontalAlignment="Right"
                                                       FontSize="20" />
                                            </Grid>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <Grid Width="380"
                                                  Margin="0,15,0,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition />
                                                    <ColumnDefinition />
                                                </Grid.ColumnDefinitions>

                                                <Label Content="Giờ chiếu"
                                                       Grid.Column="0"
                                                       FontSize="20" />
                                                <Label Content="{Binding Time}"
                                                       Grid.Column="1"
                                                       HorizontalAlignment="Right"
                                                       FontSize="20"
                                                       x:Name="_time"
                                                       FontWeight="Bold" />
                                            </Grid>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <Grid Width="380"
                                                  Margin="0,15,0,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition />
                                                    <ColumnDefinition />
                                                </Grid.ColumnDefinitions>

                                                <Label Content="Rạp"
                                                       Grid.Column="0"
                                                       FontSize="20" />
                                                <Label Content="UIT Cinema"
                                                       Grid.Column="1"
                                                       HorizontalAlignment="Right"
                                                       FontSize="20" />
                                            </Grid>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <Grid Width="380"
                                                  Margin="0,15,0,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition />
                                                    <ColumnDefinition />
                                                </Grid.ColumnDefinitions>

                                                <Label Content="Phòng chiếu"
                                                       Grid.Column="0"
                                                       FontSize="20" />
                                                <Label Content="{Binding Room}"
                                                       Grid.Column="1"
                                                       HorizontalAlignment="Right"
                                                       FontSize="20"
                                                       FontWeight="Bold" />
                                            </Grid>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <Grid Width="380"
                                                  Margin="0,15,0,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition />
                                                    <ColumnDefinition />
                                                </Grid.ColumnDefinitions>

                                                <Label Content="Ghế"
                                                       Grid.Column="0"
                                                       FontSize="20" />
                                                <TextBlock Text="{Binding Seat}"
                                                           TextWrapping="Wrap"
                                                           Grid.Column="1"
                                                           HorizontalAlignment="Right"
                                                           FontSize="20"
                                                           FontWeight="Bold" />
                                            </Grid>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <Grid Width="380"
                                                  Margin="0,15,0,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition />
                                                    <ColumnDefinition />
                                                </Grid.ColumnDefinitions>

                                                <Label Content="Giá vé"
                                                       Grid.Column="0"
                                                       FontSize="20" />
                                                <Label Content="{Binding Price}"
                                                       Grid.Column="1"
                                                       HorizontalAlignment="Right"
                                                       FontSize="20"
                                                       x:Name="_price" />
                                            </Grid>
                                        </StackPanel>

                                    </StackPanel>
                                </Border>
                                <Border Grid.Row="1"
                                        BorderThickness="0,0,0,1"
                                        BorderBrush="Black"
                                        Margin="10,0,10,0">
                                    <StackPanel VerticalAlignment="Center"
                                                Margin="0 2 0 0">
                                        <StackPanel Orientation="Horizontal">
                                            <Grid Width="380">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition />
                                                    <ColumnDefinition />
                                                </Grid.ColumnDefinitions>

                                                <Label Content="Tổng"
                                                       Grid.Column="0"
                                                       FontSize="20" />
                                                <Label x:Name="_totalticket"
                                                       Grid.Column="1"
                                                       HorizontalAlignment="Right"
                                                       FontSize="20"
                                                       Content="{Binding TotalPriceMovie}" />
                                            </Grid>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </Border>
                    </Grid>
                    <!--#endregion-->

                </Grid>
                <!--#region -->

                <!--#region Đồ ăn-->
                <Border Background="White"
                        BorderThickness="1 0 0 0"
                        BorderBrush="Gray"
                        Grid.Column="1">
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="61" />
                            <RowDefinition Height="447" />
                            <RowDefinition Height="150" />
                        </Grid.RowDefinitions>

                        <!---HEADER-->
                        <Grid Grid.Row="0">
                            <Label Content="  Sản phẩm"
                                   FontSize="25"
                                   FontWeight="Bold"
                                   BorderThickness="0,0,0,0.5"
                                   BorderBrush="Black"
                                   Padding="10,10,0,0"
                                   Margin="10 8 10 0" />
                        </Grid>

                        <!---BILL DETAIL-->
                        <Grid Grid.Row="1"
                              Height="447"
                              VerticalAlignment="Top">

                            <Grid Height="443"
                                  VerticalAlignment="Top">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="100*" />
                                    <RowDefinition Height="13*" />
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0"
                                        BorderThickness="0,0,0,1"
                                        BorderBrush="Black"
                                        Margin="10,10,10,0">
                                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                                  x:Name="scrollview">
                                        <ItemsControl ItemsSource="{Binding dsSanPham}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border  Height="100"
                                                             Margin="0,5,0,5"
                                                             BorderBrush="LightGray"
                                                             BorderThickness="0,0,0,1">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="70*" />
                                                                <ColumnDefinition Width="30*" />
                                                            </Grid.ColumnDefinitions>
                                                            <StackPanel Orientation="Horizontal"
                                                                        Grid.Column="0">
                                                                <StackPanel>
                                                                    <TextBlock Text="{Binding TenSP}"
                                                                               FontSize="20"
                                                                               TextWrapping="WrapWithOverflow"
                                                                               Margin="0 5 0 0"
                                                                               FontWeight="Medium" />
                                                                    <StackPanel Orientation="Horizontal">
                                                                        <TextBlock Text="{Binding SoLuong}"
                                                                                   FontSize="20"
                                                                                   Margin="0 20 0 0" />
                                                                        <TextBlock Text="x"
                                                                                   FontSize="20"
                                                                                   VerticalAlignment="Bottom"
                                                                                   Margin="3,20,0,1" />
                                                                        <TextBlock Text="{Binding GiaSPStr}"
                                                                                   VerticalAlignment="Bottom"
                                                                                   FontSize="20"
                                                                                   Margin="5,20,0,1" />
                                                                    </StackPanel>
                                                                </StackPanel>
                                                            </StackPanel>
                                                            <StackPanel Grid.Column="1"
                                                                        Orientation="Horizontal"
                                                                        HorizontalAlignment="Right"
                                                                        VerticalAlignment="Bottom">
                                                                <TextBlock Text="Từ từ"
                                                                           FontSize="20"
                                                                           FontWeight="Medium"
                                                                           Margin="0 0 5 10" />
                                                            </StackPanel>

                                                        </Grid>
                                                    </Border>

                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                </Border>
                                <Border Grid.Row="1"
                                        BorderThickness="0,0,0,1"
                                        BorderBrush="Black"
                                        Margin="10,0,10,11">
                                    <StackPanel VerticalAlignment="Center"
                                                Margin="0 2 0 0">
                                        <StackPanel Orientation="Horizontal">
                                            <Grid Width="380">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition />
                                                    <ColumnDefinition />
                                                </Grid.ColumnDefinitions>

                                                <Label Content="Tổng"
                                                       Grid.Column="0"
                                                       FontSize="20" />
                                                <Label x:Name="_totalproduct"
                                                       Grid.Column="1"
                                                       HorizontalAlignment="Right"
                                                       FontSize="20"
                                                       Content="{Binding TotalPriceFood}" />
                                            </Grid>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </Grid>

                        </Grid>

                        <StackPanel Margin="10 -2 10 0"
                                    Grid.Row="2">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Label Content="Tổng tiền"
                                       FontSize="20"
                                       Grid.Column="0" />
                                <Label Content="{Binding TotalPrice}"
                                       FontSize="20"
                                       Grid.Column="1"
                                       HorizontalAlignment="Right" />
                            </Grid>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Label Content="Phí giao dịch"
                                       FontSize="20"
                                       Grid.Column="0" />
                                <Label Content="Miễn phí"
                                       FontSize="20"
                                       Grid.Column="1"
                                       HorizontalAlignment="Right" />
                            </Grid>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Label Content="Khuyến mãi"
                                       FontSize="20"
                                       Grid.Column="0" />
                                <Label Content="{Binding DiscountStr}"
                                       FontSize="20"
                                       Grid.Column="1"
                                       HorizontalAlignment="Right" />
                            </Grid>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>
                                <Label Content="Sau khuyến mãi"
                                       FontSize="20"
                                       Grid.Column="0" />
                                <Label Content="{Binding LastPriceStr}"
                                       FontSize="20"
                                       Grid.Column="1"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Right" />
                            </Grid>
                        </StackPanel>

                    </Grid>
                </Border>
                <!--#endregion-->

            </Grid>
        </materialDesign:Card>

        <Grid Background="LightGray"
              Opacity="0.3"
              Grid.ColumnSpan="2">
            <Grid.Style>
                <Style TargetType="Grid">
                    <Setter Property="Visibility"
                            Value="Collapsed" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsSaving}"
                                     Value="True">
                            <Setter Property="Visibility"
                                    Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Style>
        </Grid>
        <materialDesign:Card Height="100"
                             Width="100"
                             UniformCornerRadius="5"
                             Grid.ColumnSpan="2">
            <StackPanel>
                <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                             IsIndeterminate="True"
                             Margin="0,30,0,0"
                             x:Name="prg" />
                <Label HorizontalContentAlignment="Center"
                       FontSize="15"
                       Content="Đang xử lý..."
                       Margin="0,10,0,0">
                </Label>
            </StackPanel>
            <materialDesign:Card.Style>
                <Style TargetType="materialDesign:Card">
                    <Setter Property="Visibility"
                            Value="Collapsed" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsSaving}"
                                     Value="True">
                            <Setter Property="Visibility"
                                    Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </materialDesign:Card.Style>
        </materialDesign:Card>
    </Grid>
</Window>
